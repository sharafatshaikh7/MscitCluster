<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="#00897B"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        >


        <TextView
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:text="Student Login"
            android:textSize="30dp"
            android:background="@drawable/image_corner"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/start_page_profile"
                android:src="@drawable/start_profile_logo"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txt_login_username"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:hint="User Name"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:phoneNumber="false"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txt_login_pass_img"
                android:src="@drawable/password_pic"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txt_login_password"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:phoneNumber="false"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            android:textColor="#000000"
            android:text="Login"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_attempt_show"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_registration"
            android:textColor="#000000"
            android:text="Registration"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>








</LinearLayout>
